          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
    </div>

    <div class="location">
      <p>Based in Houston, TX 77057</p>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: var(--section-alt);
    padding: 6rem 0;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--text-light);
    font-size: 1.2rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid var(--border);
    text-align: center;
  }

  .contact-info h3 {
    color: var(--primary);
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .contact-info p {
    color: var(--text);
    margin: 0;
    font-size: 1rem;
  }

  .contact-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    border-color: var(--primary);
  }

  .location {
    text-align: center;
    margin-top: 3rem;
    color: var(--text-light);
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 1rem;
    }
    
    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }
  }
</style>
