---
import ExpertiseCard from './ExpertiseCard.astro';

const expertise = [
  'Banking Operations Management',
  'Account Opening & Management',
  'Regulatory Compliance',
  'Risk Assessment & Mitigation',
  'Customer Satisfaction & Retention',
  'Workflow Optimization',
  'Query Response & Resolution',
  'Staff Training & Development',
  'Needs & Trends Analysis'
];
---
<section id="expertise" class="section">
  <div class="container">
    <h2 class="gradient-text">Areas of Expertise</h2>
    <div class="expertise-grid">
      {expertise.map(item => <ExpertiseCard title={item} />)}
    </div>
  </div>
</section>

<style>
  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }
</style>